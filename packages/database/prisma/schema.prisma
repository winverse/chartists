generator client {
  provider     = "prisma-client-js"
  output       = "../src/mongo/generated"
  moduleFormat = "esm"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Stock {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String   @unique
  name      String
  market    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}